{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "jest"],
    "paths": {
      "@daos": ["src/daos"],
      "@entities": ["src/entities"],
      "@shared": ["src/shared"],
      "@server": ["src/server"]
    }
  },
  "include": ["src/**/*.*", "test/**/*.*", "util/**/*.*", "./*.ts", "./*.js"],
  "exclude": ["src/public"]
}
